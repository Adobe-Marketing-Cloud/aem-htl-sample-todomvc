{
    // Enforcing
    "curly": true,
    "eqeqeq": true,
    "immed": true,
    "latedef": true,
    "noarg": true,
    "nonbsp": true,
    "strict": true,
    "undef": true,
    "unused": true,
    "quotmark": "single",
    "indent": 4,
    "maxparams": 4,
    "maxdepth": 4,
    "maxcomplexity": 6,
    
    // Relaxing
    "validthis": true,

    // Globals
    "predef": [ "jQuery", "use", "granite", "request", "resource", "properties", "currentPage" ]
}